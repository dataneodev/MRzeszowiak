<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MRzeszowiak.View.SettingPage"
             xmlns:pmvvm="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             pmvvm:ViewModelLocator.AutowireViewModel="True"
             Title="Ustawienia aplikacji">
    <ContentPage.Content>
        <TableView Intent="Settings" 
                       HasUnevenRows="True" 
                       x:Name="tableSetting"
                       BindingContext="{Binding _setting}">
            <TableRoot>
                <TableSection>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Margin="15,0,5,0">
                            <Label Text="Email :" VerticalOptions="Center"/>
                            <Entry IsSpellCheckEnabled="False" Keyboard="Email" IsTextPredictionEnabled="False"
                                   Text="{Binding UserEmail, Mode=TwoWay}"
                                   HorizontalOptions="FillAndExpand"/>
                        </StackLayout>
                    </ViewCell>
                </TableSection>
                <TableSection>
                    <ViewCell>
                        <StackLayout Orientation="Vertical" Margin="15,10,5,10">
                            <Label Text="Filtr wyszukiwania listy ogłoszeń podczas startu programu:"/>
                            <Button Text="Wszystkie kategorie"/>
                        </StackLayout>
                    </ViewCell>
                </TableSection>
                <TableSection>
                    <ViewCell>
                        <Grid Margin="15,10,5,10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <!--Row 0-->
                            <Label  Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Text="Ilość stron ładowana dynamicznie podczas przewijania listy ogłoszeń: " 
                                    VerticalOptions="Center"/>
                            <!--Row 1-->
                            <Label Grid.Row="1" Grid.Column="0" Text="Strony: " VerticalOptions="Center"/>
                            <Label Grid.Row="1" Grid.Column="1" Text="1" WidthRequest="35" FontAttributes="Bold" TextColor="Black"  VerticalOptions="Center"/>
                            <Stepper Grid.Row="1" Grid.Column="2"  Value="{Binding MaxScrollingAutoLoadPage, Mode=TwoWay}" Maximum="25" Minimum="1"/>
                        </Grid>
                    </ViewCell>
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>