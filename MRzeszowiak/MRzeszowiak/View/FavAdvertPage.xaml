<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MRzeszowiak.View.FavAdvertPage"
             xmlns:View="clr-namespace:MRzeszowiak.View"
             Title="Ulubione ogłoszenia">
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="MenuItem1" Order="Secondary" Text="Wyczyść liste ulubionych" Priority="0" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <View:AdvertListViewTemplate ItemsSource="{Binding AdvertShortList}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>